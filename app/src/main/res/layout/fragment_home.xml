<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/howWorks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/opificio_rounded"
            android:text="How It Works"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="75dp"

            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="58dp"
            android:fontFamily="@font/opificio_rounded"
            android:text="Step 2: Learn what possible disease you may have"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="145dp"
            android:layout_height="75dp"

            android:layout_above="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:layout_marginBottom="58dp"
            android:layout_toStartOf="@+id/imageView3"
            android:fontFamily="@font/opificio_rounded"
            android:text="Step 1: Click on the body part where you feel pain"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            app:srcCompat="@drawable/how_to_1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="36dp"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/how_to_2" />
    </RelativeLayout>

</FrameLayout>